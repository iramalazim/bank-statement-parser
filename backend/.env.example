# Flask Configuration
SECRET_KEY=your-secure-secret-key-here
FLASK_ENV=development
FLASK_DEBUG=1

# GroqCloud API
GROQ_API_KEY=gsk_your_groq_api_key_here
GROQ_MODEL=llama-3.2-90b-vision-preview

# Database
# Use absolute path for best reliability: sqlite:////full/path/to/backend/instance/bank_statements.db
# Or use relative path: sqlite:///instance/bank_statements.db
DATABASE_URL=sqlite:///instance/bank_statements.db

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Processing
CLEANUP_TEMP_FILES=true
